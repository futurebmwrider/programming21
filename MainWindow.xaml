<Window x:Class="lab03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab03"
        mc:Ignorable="d"
        Title="MainWindow" Height="255.6" Width="378.4">
    <Grid RenderTransformOrigin="0.5,0.5" Margin="0,0,2,0.4">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.225"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Button x:Name="change" Content="Change" HorizontalAlignment="Left" Height="20" Margin="12,162,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
        <Button x:Name="exit" Content="Exit" HorizontalAlignment="Left" Height="20" Margin="230,162,0,0" VerticalAlignment="Top" Width="100" Click="exit_Click"/>
        <TextBox x:Name="tb2" HorizontalAlignment="Left" Height="20" Margin="230,55,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="100" TextChanged="tb2_TextChanged"/>
        <TextBox x:Name="tb1" HorizontalAlignment="Left" Height="20" Margin="12,55,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="100" TextChanged="tb1_TextChanged"/>

    </Grid>
</Window>
